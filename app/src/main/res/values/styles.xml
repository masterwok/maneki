<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">?color_text</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">?color_background</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:statusBarColor" tools:targetApi="23">#FFFFFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="style_toolbar">@style/AppTheme.Toolbar</item>
        <item name="color_text">#000000</item>
        <item name="color_cursor">#000000</item>
        <item name="color_background">#FFFFFF</item>
        <item name="color_header_title">#000000</item>
        <item name="color_toolbar_icon_tint">#000000</item>
        <item name="color_auto_complete_clear_tint">#000000</item>
        <item name="color_edit_text_border">@android:color/transparent</item>
        <item name="color_edit_text_background">#f4f4f4</item>
        <item name="color_query_text">#676767</item>
        <item name="color_query_text_hint">#676767</item>
        <item name="color_progress_bar_foreground">#000000</item>
        <item name="color_progress_bar_background">#F4F4F4</item>
        <item name="dimen_query_border_width">0dp</item>
        <item name="dimen_query_auto_complete_popup_top_radius">0dp</item>
        <item name="dimen_query_auto_complete_popup_bottom_radius">3dp</item>
        <item name="dimen_query_auto_complete_popup_inset_top">0dp</item>
        <item name="textAppearanceLargePopupMenu">@style/AppTheme.TextAppearance.Popup</item>
        <item name="md_font_button">@font/eina_03_semi_bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/eina_03_regular</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:colorControlActivated">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/eina_03_semi_bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Oled" parent="AppTheme">
        <item name="android:textColor">?color_text</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="colorPrimary">?color_background</item>
        <item name="colorPrimaryDark">?color_background</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:statusBarColor" tools:targetApi="23">#000000</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="style_toolbar">@style/AppTheme.Oled.Toolbar</item>
        <item name="color_background">#000000</item>
        <item name="color_header_title">#FFFFFF</item>
        <item name="color_toolbar_icon_tint">#FFFFFF</item>
        <item name="color_auto_complete_clear_tint">#FFFFFF</item>
        <item name="color_edit_text_border">#FFFFFF</item>
        <item name="color_edit_text_background">#000000</item>
        <item name="color_query_text">#FFFFFF</item>
        <item name="color_query_text_hint">#FFFFFF</item>
        <item name="color_progress_bar_foreground">#FFFFFF</item>
        <item name="color_progress_bar_background">#000000</item>

        <item name="color_text">#FFFFFF</item>
        <item name="color_cursor">#FFFFFF</item>

        <item name="dimen_query_border_width">1dp</item>
        <item name="dimen_query_auto_complete_popup_top_radius">0dp</item>
        <item name="dimen_query_auto_complete_popup_bottom_radius">3dp</item>
        <item name="dimen_query_auto_complete_popup_inset_top">-4dp</item>

        <item name="textAppearanceLargePopupMenu">@style/AppTheme.TextAppearance.Popup</item>

        <item name="md_font_button">@font/eina_03_semi_bold</item>
    </style>

    <style name="AppTheme.Oled.Toolbar" parent="AppTheme.Toolbar">
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:colorControlActivated">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/eina_03_semi_bold</item>
    </style>

</resources>